<Application x:Class="Cmux.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:Cmux.Converters"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/DarkTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Value converters -->
            <conv:BoolToVisibilityConverter x:Key="BoolToVisibility" />
            <conv:IntToVisibilityConverter x:Key="IntToVisibility" />
            <conv:NullToCollapsedConverter x:Key="NullToCollapsed" />
            <conv:EqualityConverter x:Key="EqualityConverter" />
            <conv:InverseBoolConverter x:Key="InverseBool" />
            <conv:HexToBrushConverter x:Key="HexToBrush" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
