<Window x:Class="Cmux.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="cmux Settings" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Settings" FontSize="20" FontWeight="Bold"
                   Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,16" />

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Font settings -->
                <TextBlock Text="Terminal" FontSize="14" FontWeight="SemiBold"
                           Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,8" />

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Font family"
                               Foreground="{StaticResource ForegroundDimBrush}" VerticalAlignment="Center" />
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="FontFamilyBox"
                             Background="#FF333333" Foreground="{StaticResource ForegroundBrush}"
                             BorderThickness="1" BorderBrush="{StaticResource BorderBrush}"
                             Padding="6,4" Margin="0,2" />

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Font size"
                               Foreground="{StaticResource ForegroundDimBrush}" VerticalAlignment="Center" />
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="FontSizeBox"
                             Background="#FF333333" Foreground="{StaticResource ForegroundBrush}"
                             BorderThickness="1" BorderBrush="{StaticResource BorderBrush}"
                             Padding="6,4" Margin="0,2" Width="80" HorizontalAlignment="Left" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Shell"
                               Foreground="{StaticResource ForegroundDimBrush}" VerticalAlignment="Center" />
                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="ShellBox"
                             Background="#FF333333" Foreground="{StaticResource ForegroundBrush}"
                             BorderThickness="1" BorderBrush="{StaticResource BorderBrush}"
                             Padding="6,4" Margin="0,2" />
                </Grid>

                <Border Height="1" Background="{StaticResource BorderBrush}" Margin="0,4,0,12" />

                <!-- Keyboard shortcuts info -->
                <TextBlock Text="Keyboard Shortcuts" FontSize="14" FontWeight="SemiBold"
                           Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,8" />

                <TextBlock Foreground="{StaticResource ForegroundDimBrush}" FontSize="12" TextWrapping="Wrap">
                    <Run Text="Ctrl+N" FontWeight="SemiBold" Foreground="{StaticResource ForegroundBrush}" />
                    <Run Text=" New workspace" /><LineBreak />
                    <Run Text="Ctrl+T" FontWeight="SemiBold" Foreground="{StaticResource ForegroundBrush}" />
                    <Run Text=" New surface" /><LineBreak />
                    <Run Text="Ctrl+D" FontWeight="SemiBold" Foreground="{StaticResource ForegroundBrush}" />
                    <Run Text=" Split right" /><LineBreak />
                    <Run Text="Ctrl+Shift+D" FontWeight="SemiBold" Foreground="{StaticResource ForegroundBrush}" />
                    <Run Text=" Split down" /><LineBreak />
                    <Run Text="Ctrl+W" FontWeight="SemiBold" Foreground="{StaticResource ForegroundBrush}" />
                    <Run Text=" Close surface" /><LineBreak />
                    <Run Text="Ctrl+Shift+W" FontWeight="SemiBold" Foreground="{StaticResource ForegroundBrush}" />
                    <Run Text=" Close workspace" /><LineBreak />
                    <Run Text="Ctrl+B" FontWeight="SemiBold" Foreground="{StaticResource ForegroundBrush}" />
                    <Run Text=" Toggle sidebar" /><LineBreak />
                    <Run Text="Ctrl+I" FontWeight="SemiBold" Foreground="{StaticResource ForegroundBrush}" />
                    <Run Text=" Notification panel" /><LineBreak />
                    <Run Text="Ctrl+Shift+U" FontWeight="SemiBold" Foreground="{StaticResource ForegroundBrush}" />
                    <Run Text=" Jump to latest unread" /><LineBreak />
                    <Run Text="Ctrl+1-8" FontWeight="SemiBold" Foreground="{StaticResource ForegroundBrush}" />
                    <Run Text=" Jump to workspace" /><LineBreak />
                    <Run Text="Ctrl+Alt+Arrow" FontWeight="SemiBold" Foreground="{StaticResource ForegroundBrush}" />
                    <Run Text=" Focus pane directionally" />
                </TextBlock>

                <Border Height="1" Background="{StaticResource BorderBrush}" Margin="0,12,0,12" />

                <!-- About -->
                <TextBlock Text="About" FontSize="14" FontWeight="SemiBold"
                           Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,8" />
                <TextBlock Foreground="{StaticResource ForegroundDimBrush}" FontSize="12">
                    <Run Text="cmux for Windows v0.1.0" /><LineBreak />
                    <Run Text="Terminal multiplexer for AI coding agents" /><LineBreak />
                    <Run Text="Reads Ghostty config from ~/.config/ghostty/config" />
                </TextBlock>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Save" Style="{StaticResource CmuxButton}"
                    Click="Save_Click" Padding="16,6" Margin="0,0,8,0" />
            <Button Content="Cancel" Style="{StaticResource CmuxButton}"
                    Click="Cancel_Click" Padding="16,6" />
        </StackPanel>
    </Grid>
</Window>
