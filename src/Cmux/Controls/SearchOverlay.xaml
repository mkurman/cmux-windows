<UserControl x:Class="Cmux.Controls.SearchOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="340" Height="38" VerticalAlignment="Top" HorizontalAlignment="Right"
             Margin="8,8,8,0">
    <Border Background="#E6181818" CornerRadius="8" Padding="6,3"
            BorderBrush="#FF2A2A2A" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="16" ShadowDepth="4" Color="#000000" Opacity="0.5" Direction="270" />
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox x:Name="SearchInput" Grid.Column="0"
                     Background="#FF0F0F0F" Foreground="#FFE0E0E0" CaretBrush="#FF818CF8"
                     BorderThickness="0" Padding="6,4" FontSize="12"
                     VerticalContentAlignment="Center"
                     TextChanged="SearchInput_TextChanged"
                     KeyDown="SearchInput_KeyDown" />
            <TextBlock Grid.Column="1" x:Name="MatchCount" Text="0/0"
                       Foreground="#FF6B7280" FontSize="11"
                       VerticalAlignment="Center" Margin="6,0" />
            <Button Grid.Column="2" Content="&#xE010;" FontFamily="Segoe MDL2 Assets"
                    FontSize="10" Padding="4,2" Margin="0,0,2,0"
                    Background="Transparent" Foreground="#FFE0E0E0" BorderThickness="0"
                    Click="PrevMatch_Click" Cursor="Hand" ToolTip="Previous (Shift+Enter)" />
            <Button Grid.Column="3" Content="&#xE011;" FontFamily="Segoe MDL2 Assets"
                    FontSize="10" Padding="4,2" Margin="0,0,2,0"
                    Background="Transparent" Foreground="#FFE0E0E0" BorderThickness="0"
                    Click="NextMatch_Click" Cursor="Hand" ToolTip="Next (Enter)" />
            <Button Grid.Column="4" Content="&#xE10A;" FontFamily="Segoe MDL2 Assets"
                    FontSize="10" Padding="4,2"
                    Background="Transparent" Foreground="#FFE0E0E0" BorderThickness="0"
                    Click="Close_Click" Cursor="Hand" ToolTip="Close (Escape)" />
        </Grid>
    </Border>
</UserControl>
