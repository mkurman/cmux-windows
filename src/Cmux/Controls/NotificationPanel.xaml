<UserControl x:Class="Cmux.Controls.NotificationPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="360">

    <Border CornerRadius="12,0,0,12" Padding="0"
            Background="#F2141414"
            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1,0,0,0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="24" ShadowDepth="0" Color="#000000" Opacity="0.6" />
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#FF1A1A1A" CornerRadius="12,0,0,0" Padding="0">
                <Grid Margin="16,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Notifications" FontSize="14"
                               FontWeight="SemiBold" Foreground="{StaticResource ForegroundBrush}"
                               VerticalAlignment="Center" />

                    <Button Grid.Column="1" Content="Mark all read"
                            Style="{StaticResource CmuxButton}"
                            FontSize="11" Margin="0,0,4,0" Padding="8,4"
                            Foreground="{StaticResource ForegroundDimBrush}"
                            Command="{Binding MarkAllNotificationsReadCommand}" />

                    <Button Grid.Column="2" Content="&#xE10A;" FontFamily="Segoe MDL2 Assets"
                            Style="{StaticResource CmuxButton}"
                            FontSize="10" Padding="6,4"
                            Foreground="{StaticResource ForegroundDimBrush}"
                            Command="{Binding ToggleNotificationPanelCommand}" />
                </Grid>
            </Border>

            <!-- Notification list -->
            <ListBox Grid.Row="1"
                     ItemsSource="{Binding NotificationService.Notifications}"
                     Background="Transparent" BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="16,10" BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0,0,0,1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- Title + unread dot -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                    <Ellipse Width="6" Height="6" Margin="0,0,8,0"
                                             VerticalAlignment="Center">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Setter Property="Fill" Value="{StaticResource NotificationBrush}" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsRead}" Value="False">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                    <TextBlock Text="{Binding Title}"
                                               Foreground="{StaticResource ForegroundBrush}"
                                               FontSize="12" FontWeight="SemiBold" />
                                </StackPanel>

                                <!-- Body -->
                                <TextBlock Grid.Row="1" Text="{Binding Body}"
                                           Foreground="{StaticResource ForegroundDimBrush}"
                                           FontSize="11" Margin="0,4,0,0"
                                           TextWrapping="Wrap" MaxHeight="44"
                                           TextTrimming="CharacterEllipsis"
                                           LineHeight="16" />

                                <!-- Timestamp -->
                                <TextBlock Grid.Row="2" Text="{Binding Timestamp, StringFormat=HH:mm:ss}"
                                           Foreground="{StaticResource ForegroundDimBrush}"
                                           FontSize="10" Margin="0,4,0,0" Opacity="0.6" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>

            <!-- Empty state -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="&#xEA8F;" FontFamily="Segoe MDL2 Assets"
                           FontSize="32" Foreground="{StaticResource ForegroundDimBrush}"
                           HorizontalAlignment="Center" Opacity="0.3" Margin="0,0,0,8" />
                <TextBlock Text="No notifications yet"
                           Foreground="{StaticResource ForegroundDimBrush}"
                           HorizontalAlignment="Center" FontSize="13" Opacity="0.5" />
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding NotificationService.Notifications.Count}" Value="0">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
