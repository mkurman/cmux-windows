<UserControl x:Class="Cmux.Controls.CommandPalette"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             HorizontalAlignment="Center" VerticalAlignment="Top"
             Margin="0,60,0,0" Width="550" MaxHeight="400"
             Visibility="Collapsed">
    <Border Background="#F2141414" CornerRadius="10"
            BorderBrush="#FF2A2A2A" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="8" Color="#000000" Opacity="0.7" Direction="270" />
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Row 0: Search input -->
            <Border Grid.Row="0" BorderBrush="#FF2A2A2A" BorderThickness="0,0,0,1" Padding="12,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="&#xE721;" FontFamily="Segoe MDL2 Assets"
                               FontSize="14" Foreground="#FF6B7280"
                               VerticalAlignment="Center" Margin="0,0,10,0" />
                    <TextBox x:Name="SearchInput" Grid.Column="1"
                             Background="Transparent" Foreground="#FFE0E0E0"
                             CaretBrush="#FF818CF8" BorderThickness="0"
                             FontSize="14" VerticalContentAlignment="Center"
                             TextChanged="SearchInput_TextChanged"
                             KeyDown="SearchInput_KeyDown" />
                </Grid>
            </Border>

            <!-- Row 1: Results list -->
            <ListBox x:Name="ResultsList" Grid.Row="1"
                     Background="Transparent" BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     SelectionChanged="ResultsList_SelectionChanged"
                     MouseDoubleClick="ResultsList_MouseDoubleClick"
                     PreviewMouseLeftButtonUp="ResultsList_PreviewMouseLeftButtonUp"
                     VirtualizingPanel.IsVirtualizing="True">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="ItemBorder" Padding="12,8" CornerRadius="6" Margin="4,1"
                                            Background="Transparent" Cursor="Hand">
                                        <ContentPresenter />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="ItemBorder" Property="Background" Value="#FF1F1F1F" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="ItemBorder" Property="Background" Value="#FF1A1A2E" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <!-- Icon -->
                            <TextBlock Grid.Column="0" Text="{Binding Icon}"
                                       FontFamily="Segoe MDL2 Assets" FontSize="14"
                                       Foreground="#FF6B7280" VerticalAlignment="Center"
                                       Margin="0,0,10,0" />
                            <!-- Label + Description -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Label}" Foreground="#FFE0E0E0" FontSize="13" />
                                <TextBlock Text="{Binding Description}" Foreground="#FF6B7280" FontSize="12"
                                           Margin="10,0,0,0" VerticalAlignment="Center"
                                           Visibility="{Binding Description, Converter={StaticResource NullToCollapsed}}" />
                            </StackPanel>
                            <!-- Shortcut -->
                            <Border Grid.Column="2" Background="#FF1F1F1F" CornerRadius="4" Padding="6,2"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding Shortcut, Converter={StaticResource NullToCollapsed}}">
                                <TextBlock Text="{Binding Shortcut}" Foreground="#FF6B7280" FontSize="11" />
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Empty state -->
            <TextBlock x:Name="EmptyText" Grid.Row="1"
                       Text="No matching commands" Foreground="#FF6B7280"
                       FontSize="13" HorizontalAlignment="Center"
                       Margin="0,20,0,20" Visibility="Collapsed" />
        </Grid>
    </Border>
</UserControl>
